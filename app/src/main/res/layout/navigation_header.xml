<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:background="@drawable/backrepeat"
        android:tileMode="repeat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/userProfilePicture"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"
            android:text="Akash Bangad"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text="akash.bangad93@gmail.com"
            android:textSize="18sp"
            android:textStyle="normal"

            />


    </LinearLayout>



    <TextView
        android:id="@+id/credits_remaining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credits Remaining: 0"
        android:textColor="@android:color/white"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="26dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/punch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="16dp"
        fancy:fb_ghost="true"
        fancy:fb_focusColor="#fffffefa"
        fancy:fb_fontIconSize="20sp"
        fancy:fb_radius="40dp"
        fancy:fb_iconPosition="right"
        fancy:fb_borderWidth="2dp"
        fancy:fb_borderColor="#ffe7e6e2"
        fancy:fb_text="Punchcard History: 0"
        fancy:fb_textColor="#ffffff"
        fancy:fb_textSize="22dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/credits_remaining"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="startPunchCardActivity"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/class_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="16dp"
        fancy:fb_ghost="true"
        fancy:fb_focusColor="#fffffefa"
        fancy:fb_fontIconSize="20sp"
        fancy:fb_radius="40dp"
        fancy:fb_iconPosition="right"
        fancy:fb_borderWidth="2dp"
        fancy:fb_borderColor="#ffe7e6e2"
        fancy:fb_text="Class History: 0"
        fancy:fb_textColor="#ffffff"
        fancy:fb_textSize="22dp"
        android:onClick="startScheduleActivityForClassHistory"
        android:layout_below="@+id/punch_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <View
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/class_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="135dp"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="16dp"
        fancy:fb_ghost="true"
        fancy:fb_focusColor="#fffffefa"
        fancy:fb_fontIconSize="20sp"
        fancy:fb_radius="40dp"
        fancy:fb_iconPosition="right"
        fancy:fb_borderWidth="2dp"
        fancy:fb_borderColor="#ffe7e6e2"
        fancy:fb_text="Log Out"
        fancy:fb_textColor="#ffffff"
        fancy:fb_textSize="22dp"
        android:onClick="onLogoutClick"
        android:layout_below="@+id/seperator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>


</RelativeLayout>